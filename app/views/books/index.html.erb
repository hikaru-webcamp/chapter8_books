        <ul>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
  </div>
  <% end %>


<div class="field">
  　<% if @book.errors.any? %>
     <div class="field_with_errors">
       <label for="book_title"><%= f.label :Title%></label>
     </div>
      <%= f.text_field :title %>
     <div class="field_with_errors">
       <label for="book_body"><%= f.label :body%></label>
     </div>
      <%= f.text_area :body %>

    <%else%>
     <label for="book_title"><%= f.label :Title%></label>
